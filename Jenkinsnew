pipeline {
    agent any
    tools {
        maven 'M2_HOME'
    }
    stages {
        stage('Checkout the Project from GitHub') {
            steps {
                git 'https://github.com/devopscbabu/DevOpsAddressBook.git'
            }
        }
        stage('Compile Maven Project') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test Maven Project') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package Maven Project') {
            steps {
                sh 'mvn package'
            }
        }
    }
}
